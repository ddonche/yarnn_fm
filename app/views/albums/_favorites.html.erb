<div class="icons">
  <% if user_signed_in? && current_user.favorited?(track) %>
    <%= link_to image_tag('icons/heart_full.svg', width: 20), track_unfavorite_path(track), method: :post, remote: true %>
  <% else %>
    <%= link_to image_tag('icons/heart_empty.svg', width: 20), track_favorite_path(track), method: :post, remote: true %>
  <% end %>
</div>
<div class="icons">
  <%= image_tag('icons/comments.svg', width: 20) %>&nbsp;51 comments
</div>
<div class="icons">
  <%= audio_tag track.audio.url, controls: true %>
</div>
<div class="icons">
  <% track.tag_list.map.each do |tag| %>
    <span style="margin-right: .5rem"><i><%= link_to tag, tag_path(tag) %></span></i>
  <% end %>
</div>