<div id="album_show">
	<div id="banner" class="track_banner">
		<%= render 'layouts/header' %>
	</div>

  <div class="wrapper_skinny_left">
    <%= render 'avatar' %>
  </div>
      
  <div class="wrapper_wide_right">
    
    <div class="tracks">
			<ul class="cf">
				<% @tracks.each do |track| %>
					<li class="cf">
						<div class="track_thumbnail">
							<a href="#">
								<% if track.avatar? %>
									<%= image_tag track.avatar.url, width: 100 %>
								<% else %>
									<%= image_tag 'default_track.jpg', width: 100, alt: 'default track image' %>
								<% end %>
							</a>
						</div>
						<div class="track_overview">
							<h2><%= link_to track.title, track_path(track) %><% if track.explicit == "explicit" %>&nbsp;(explicit)<% end %></h2>
							<p class="description"><%= truncate(track.description, length: 160) %></p>
							<%= audio_tag track.audio.url, controls: true %>
						</div>
					</li>
				<% end %>
			</ul>
    
    			<%= will_paginate @tracks, previous_label: "Previous", next_label: "Next" %>
    	</div>
    
  </div>
</div>
