<body style="background-color: #e4e0e0;">
  <div class="container pt-sm">
    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-9">
        <div class="card shadow zindex-100">
          <div class="card-body px-md-5 py-3">
            <div class="text-center">
              <%= image_tag("yarnn-icon-red.png", width: 90) %>
              <h3 class="site-blue">Wiki Article</h3>
    
  	          <hr class="colorgraph">
            </div>
            <span class="clearfix"></span>
          <%= form_for(@wiki) do |f| %>
            <% if @wiki.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@wiki.errors.count, "error") %> prohibited this article from being saved:</h2>
          
                <ul>
                <% @wiki.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.text_field :title, required: true, class: "form-control", placeholder: "Title" %>
            </div>
          
            <div class="form-group">
              <%= f.rich_text_area :body, rows: 15 %>
            </div>
            
            <hr class="colorgraph">
          	<div class="row justify-content-center">
          		<div class="col-xs-12 col-sm-12 col-md-6">
          		  <h3><%= f.button "Submit", class: "btn btn-lg btn-outline-secondary btn-block mb-2", data: {disable_with: "<i class= 'fa fa-spinner fa-spin'></i> Submitting..." } %></h3>
          		</div>
          	</div>
          
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>