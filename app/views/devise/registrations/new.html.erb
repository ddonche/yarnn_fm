<div id="background-register">
  <header class="cf">
    <div class="wrapper_wide">
      <%= link_to root_path do %>
	  		<%= image_tag 'yarnn-text-logo.png', width: 120, alt: 'Yarnn icon', id: "logo" %>
	  	<% end %>
      <nav>
        <ul>
          <% unless user_signed_in? %>
            <li><%= link_to "Explore", users_path %></li>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% else %>
            <li><a href="#">Dashboard</a></li>
            <li><%= link_to "Explore", users_path %></li>
            <li><%= link_to "Create", new_album_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>


    <div class="wrapper_skinny">
      <div id="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
      	<div class="field">
          <%= f.label :username, class: "title" %><br />
          <%= f.text_field :username, :autofocus => true, required: true %>
        </div>
  
        <div class="field">
          <%= f.label :email, class: "title" %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
  
        <div class="field">
          <%= f.label :password, class: "title" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
  
        <div class="field">
          <%= f.label :password_confirmation, class: "title" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
  
        <div class="actions">
          <%= f.submit "Sign up", class: "button button_highlight button_block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>