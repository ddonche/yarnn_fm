<div class="container">
  <nav aria-label="breadcrumb">
	  <ol class="breadcrumb mt-3 shadow-sm">
		    <li class="breadcrumb-item"><i class="fas fa-user-astronaut site-blue mx-2" title="user"></i><%= link_to current_user.username, user_path(current_user) %></li>
        <li class="breadcrumb-item">Payouts</li>
	  </ol>
	</nav>
  <%= render 'shared/alert' %>
  
    <div class="row justify-content-center mb-3">
      <div class="col-10">
        <h2>Payout Method</h2>
          
          <p>Visit your Stripe dashboard to control how you receive payouts for selling items in our marketplace.</p>
          
          <% if current_user.uid.blank? %>
            <%= link_to image_tag('icons/blue-on-light.png'), stripe_express_path %>
          <% else %>
            <%= link_to "Stripe Dashboard", @login_link.url, class: "btn btn-primary", style: "color: #FFF;" %>
          <% end %>
      </div>
    </div>
</div>