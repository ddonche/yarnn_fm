<div class="row">
  <div class="col-12 col-md-9 small">
    <% if item.user == current_user %>
      You
    <% else %>
    <%= link_to User.find(item.user_id).username, user_path(item.user_id) %> 
    <% end %>
    
    uploaded a new track: <i><%= link_to Track.find(item.item_id).title, track_path(item.item_id) %></i>   
    
    <hr class="colorgraph">
    <div class="row align-items-center">
      <div class="col-5">
        <%= link_to track_path(item.item_id) do %>
  				<%= image_tag Track.find(item.item_id).image.url(:thumb), class: "image-full p-1 border" %>
  			<% end %>
      </div>
      <div class="col-7">
        <div class="border border-secondary rounded mt-2 p-2">
          <%= truncate(Track.find(item.item_id).description, length: 100) %>
        </div>
      </div>
    </div>

    <p class="mt-2">
      <%= audio_tag(Track.find(item.item_id).audio, autoplay: false, controls: true) %>
    </p>
  </div>
  <div class="col-12 col-md-3 small text-center">
    <small><%= time_ago_in_words(item.created_at) %> ago
      <br />
      <i class="fas fa-comments site-blue" title="comments"></i>
      <span class="ml-1 site-red"><%= Track.find(item.item_id).comments.count %></span>
    </small>
    <br />
    <br />
    <% Track.find(item.item_id).tag_list.map.each do |tag| %>
      <span class="badge badge-info py-1 px-2 site-link-white"><%= link_to tag, tag_path(tag) %></span>
    <% end %>
  </div>
</div>