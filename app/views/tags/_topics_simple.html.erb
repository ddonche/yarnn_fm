<% @active.each do |active| %>
    <div class="lightline mx-auto"></div>
        <div class="row">
            <div class="col-10">
                <%= link_to active.title, topic_path(active) %>
            </div>
            <div class="col-2">
                <small><span class="text-secondary tags"><%= active.comments.count %></span></small>
            </div>
        </div>
<% end %>