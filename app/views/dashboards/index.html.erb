<div id="other_background_nocenter" style="overflow-y: auto;">
<%= render 'shared/alert' %>

<section>
  <div class="container">
    <div class="row p-3">
      <div class="col-md-7">
        <div class="px-3 mt-3 mb-5 pb-4 text-secondary bg-white rounded">
          <div class="row py-3 rounded-top">
            <div class="col-12">
              <h5 class="site-blue">Latest Activity</h5>
            </div>
          </div>
          
        <%= render 'dashboards/content/feed' %>
          
        </div>
      </div>
      <div class="col-md-5">
        <div class="px-3 my-3 pb-5 text-secondary bg-white rounded">
        	<div class="row pt-3 rounded">
            <div class="col-12">
              <h5 class="site-blue">Hello, <%= current_user.username %>!</h5>
            </div>
          </div>
          <div class="row p-2">
            <div class="col-12">
              <%= render partial: "dashboards/content" %>
            </div>
          </div>
          <% if current_user.onboarding_percent.round == 100 %>
          <div class="row p-2">
            <div class="col-11 mx-auto border border-secondary rounded p-4">
              <i class="fas fa-award site-blue"></i> You have completed your onboarding profile!
            </div>
          </div>
          <% else %>
            
          <div class="row px-2">
            <div class="col-sm-12">
               <div id="divInfo" class="alert alert-info alert-dismissible fade show" role="alert">
                  <div class="alert-heading">Hey you!</div> 
                  <button type="button" class="close" data-dismiss="alert" aria-label="close"><span aria-hidden="true">&times;</span></button>
                  <p><a class="rj" href="profile/index.html">Visit your profile!</a> Check your self, you aren't looking well.</p>
               </div>
            </div>
          </div>
          <div class="row p-2">
            <div class="col-11 mx-auto border border-secondary rounded pt-4 px-4 pb-2">
              <h5>Onboarding Profile</h5>
              <div class="progress mt-1 mb-2">
                <div class="progress-bar" role="progressbar" style="width: <%= current_user.onboarding_percent.round %>%" aria-valuenow="<%= current_user.onboarding_percent.round %>" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <small>
                <div>  
                  <%= onboarding_step_icon current_user.image? %>
                  Add an Avatar
                </div>
                <div>
                  <%= onboarding_step_icon current_user.bio? %>
                  Add a Bio
                </div>
                <div>
                  <%= onboarding_step_icon current_user.has_favorite? %>
                  Add a Track to Your Station
                </div>
                <div>
                  <%= onboarding_step_icon current_user.has_followed? %>
                  Follow Another User
                </div>
                <div>
                  <%= onboarding_step_icon current_user.has_invited? %>
                  Invite Someone
                </div>
                <div>
                  <%= onboarding_step_icon current_user.has_topic? %>
                  Create a Topic in a Genre
                </div>
                <div>
                  <%= onboarding_step_icon current_user.has_comment? %>
                  Comment on Something
                </div>
                <div>
                  <%= onboarding_step_icon current_user.has_review? %>
                  Leave a Review in the Marketplace
                </div>
              </small>
              <small class="float-right site-blue"><em><%= current_user.onboarding_percent.round %>% complete</em></small>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
</div>