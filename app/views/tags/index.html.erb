<div id="album_show">
	<div id="banner" class="track_banner">
	  <%= render 'layouts/header' %>
	</div>

  <%= render 'shared/alert' %>
  
	<h2 style="text-align:center; margin-top: 1rem;">Explore Genres</h2>
	<%= render 'shared/genres' %>
	
	<h2 style="text-align:center">Most Active Genres</h2>
	<div id="albums" class="cf">
		<div class="wrapper">
			<ul class="cf">
				<% @tags.each do |tag| %>
						<li>
							<div class="album_overview">
								<h2><%= link_to tag.name, tag_path(tag.name) %> </h2>
								<p class="track_count"><%= pluralize(tag.taggings_count, 'Total Item') %></p>
							</div>
						</li>
				<% end %>
			</ul>
	
			<%= will_paginate @tags, previous_label: "Previous", next_label: "Next" %>
		</div>
	</div>
	
</div>