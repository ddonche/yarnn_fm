<div class="row pl-2 py-2">
  <div class="col-12">
    <small>
      <a data-target="#collapseNotation" data-toggle="collapse" aria-expanded="false" aria-controls="collapseNotation">
          <h6 class="float-right">
          reply to this comment
          </h6>
      </a>
    </small>
  </div>
</div>

<div class="collapse" id="collapseNotation">
  <div class="card card-body mb-2">
      <%= form_for [@commentable, @comment, @notation] do |f| %>
          <% if @notation.errors.any? %>
              <div class="error_messages">
                <h3>Please correct the following errors.</h3>
                <ul>
                <% @notation.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
        
            <div class="field">
              <%= f.text_area :content, :rows => 5 %>
            </div>
          
        <hr class="colorgraph">
  		  <div class="row">
  			<div class="col-xs-12 col-sm-12 col-md-6">
  			  <h3><%= f.button "Submit", class: "btn btn-lg btn-outline-secondary btn-block mb-2", data: {disable_with: "<i class= 'fa fa-spinner fa-spin'></i> Submitting..." } %></h3>
  			</div>
  		  </div>
    <% end %>
  </div>
</div>