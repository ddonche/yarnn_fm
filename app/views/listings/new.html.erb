<div id="album_show">
	<div id="banner" class="track_banner">
	  <%= render 'layouts/header' %>
	</div>
	
<%= render 'shared/alert' %>

    <div class="form_wrapper_skinny">
      <div id="form">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="container text-center">
    <h1>Merchants</h1>
  </div>
  <% if @user.is_seller? %>
    <% unless @user.can_receive_payments? %>
      <div class="panel panel-default">
        <div class="panel-header text-center">
          <h4>
            You wont be able to sell items until you register with Stripe!
          </h4>
        </div>
        <div class="panel-body text-center">
          <%= link_to 'Connect',
            stripe_url,
            class: 'btn btn-lg btn-info',
            target: '_blank'
          %>
        </div>
      </div>
    <% end %>
  <% end %>
  <% @merchants.each do |merchant| %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
      <div class="panel panel-default">
        <div class="panel-header text-center">
          <h3>
            <%= merchant.title %>
          </h3>
          <p>
            <%= merchant.description %>
          </p>
        </div>
        <div class="panel-body">
          <% if current_user == merchant.owner %>
            <div class="row">
              <div class="col-lg-4">
                <div class="btn btn-md btn-info btn-options">
                  <%= link_to 'Show', merchant %>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="btn btn-md btn-warning btn-options">
                  <%= link_to 'Edit', edit_merchant_path(merchant) %>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="btn btn-md btn-danger btn-options">
                  <%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                <div class="btn btn-md btn-primary btn-options">
                  <%= link_to 'Show', merchant %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <br/>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
    <div class="panel panel-default"></div>
    <div class="btn btn-md btn-info">
      <%= link_to 'New Merchant', new_user_merchant_path(@user) %>
    </div>
  </div>
</div>
