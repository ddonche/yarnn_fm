<%= render 'shared/alert' %>

  <div class="wrapper_skinny_left">
    <%= render 'avatar' %>
    <%= render 'followers' %>
    <%= render 'following' %>
  </div>


  <div class="wrapper_wide_right_right">
    <div id ="index-nav-container">
      <div class = "table-row">
        <div class="table-cell"><%= image_tag('icons/microphone.svg', height: 40) %><br />
          <%= link_to "audio tracks", user_path(@user) %></div>
        <div class="table-cell"><%= image_tag('icons/cassette.svg', height: 40) %><br />
          <%= link_to "albums", albums_user_path(@user) %></div>
        <div class="table-cell"><%= image_tag('icons/blog.svg', height: 30) %><br />
          <%= link_to "blog posts", blogs_user_path(@user) %></div>
        <div class="table-cell"><%= image_tag('icons/station.svg', height: 33) %><br />
          <%= link_to "station", station_path(@user) %></div>
      </div>
    </div>
  </div>
  
  <% if @albums.any? %>
  <div class="wrapper_wide_right_right">
    <div id="albums" class="cf">
    	<div class="wrapper">
    		<ul class="cf">
    			<% @albums.each do |album| %>
    					<li>
    						<%= link_to album do %>
    							<%= image_tag album.image.url(:thumb) %>
    						<% end %>
    						<div class="album_overview">
    							<h2><%= link_to album.title, album_path(album) %></h2> 
    							<p class="track_count"><%= truncate(album.description, length: 88) %></p>
    							<p class="track_count"><%= pluralize( album.tracks.count, 'Track' ) %> | <%= album.year %></p> 
    						</div>
    					</li>
    			<% end %>
    		</ul>
    
    		<%= paginate @albums %>
    	</div>
    </div>
  </div>
  <% else %>
  <div class="wrapper_wide_right_right">
    <div class="side-box">
      <div class="side-content">
        <p>This user has not created any albums yet.</p>
      </div>
     </div>
  </div>
  <% end %>
  
