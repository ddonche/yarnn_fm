<div class="main_avatar">

    <div class="image">
      <% if @user.avatar? %>
        <%= image_tag(@user.avatar.url, width: 225) %>
      <% else %>
        <%= image_tag 'default_track.jpg', width: 225, title: @user.username %>
      <% end %>
    </div>
    
    <h4><%= @user.username %> | 
      <% if @user.name? %>
        <%= @user.name %>
      <% else %>
        <%= "Mysterious Stranger" %>
      <% end %>
    </h4> 
    
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if user_signed_in? %>
    
</div>