<!DOCTYPE html>
<html>
<head>
  <title>YarnnFm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
  <link href="https://fonts.googleapis.com/css?family=Cormorant+Upright|Hind|Raleway|Lato|Ovo|Teko" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'jquery.raty.js', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'https://js.stripe.com/v2/' %>
  <title>Yarnn.FM</title>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => ENV["PUBLISHABLE_KEY"] %>
</head>
<body>
  <%= render 'layouts/header' %>
  <%= yield %>
  
  <% unless current_page?(root_path) %>
    <%= render 'shared/footer' %>
  <% end %>
  
</body>
</html>
