<div class="row">
  <div class="col-12 col-md-9 small">
    <% if item.user == current_user %>
      You
    <% else %>
    <%= link_to User.find(item.user_id).username, user_path(item.user_id) %> 
    <% end %>
    
    listed the <%= Listing.find(item.item_id).filetype %> 
    <%= link_to Listing.find(item.item_id).title, listing_path(item.item_id) %> for sale in the marketplace
    under
    <% Listing.find(item.item_id).tag_list.map.each do |tag| %>
      <span class="badge badge-info py-1 px-2 site-link-white"><%= link_to tag, tag_path(tag) %></span></h6>
    <% end %>
    for <strong><%= number_to_currency(Listing.find(item.item_id).price) %></strong>.                
    <div class="grayline mt-2"></div>
    <div class="row">
      
        <div class="border my-1 p-2 pb-2">
          <%= link_to listing_path(item.item_id) do %>
    				<%= image_tag Listing.find(item.item_id).image.url(:thumb), height: 100, class: "p-1 border float-left mr-2" %>
    			<% end %>
          <%= truncate(Listing.find(item.item_id).description, length: 140) %>
          <br/>
          <div id="stars">
						<div class="star-rating" data-score=<%= Listing.find(item.item_id).avg_rating %> style="max-width: 10%;"></div>
					</div>
        </div>
      
    </div>
  </div>
  <div class="col-12 col-md-3 small">
      <%= time_ago_in_words(item.created_at) %> ago
      <i class="fas fa-highlighter text-muted ml-3"></i>
      <span class="ml-2 site-red"><%= Listing.find(item.item_id).reviews.count %></span>
  </div>
</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3-us-west-2.amazonaws.com/yarnn/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>