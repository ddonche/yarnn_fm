<div id="other_background_nocenter" style="overflow-y: auto;">
 	<!-- Page Content -->

<div class="container full-form-container mt-2">
  <div class="row justify-content-center trans-bg p-3 mt-3 p-sm-4 mt-sm-5 rounded">
    <div class="col-11">

          <div class="text-center mb-1">
            <%= image_tag("yarnn-icon.png", size: "96x72") %>
            <h2 class="site-blue">Registration Info</h2>
            <p class="text-muted mb-0">Just set these items and you'll be ready!</p>
          </div>
          <hr class="colorgraph">
            
            <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :invitation_token, readonly: true %>
          
          <form>
            
            <div class="form-group">
              <%= f.label :username, class: "small site-blue" %><br />
              <%= f.text_field :username, class: "form-control", placeholder: "Johnny3000, etc." %>
            </div>
            <div class="form-group">
              <%= f.label :name, class: "small site-blue" %><br />
              <%= f.text_field :name, class: "form-control", placeholder: "John F. Doe, etc." %>
              <small id="nameHelp" class="form-text site-red text-center">Ideally, use your real name. You can add unlimited pseudonyms later.</small>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "small site-blue" %><br />
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
             <div class="form-group">
              <%= f.label :password_confirmation, class: "small site-blue" %><br />
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Again" %>
            </div>
            <hr class="colorgraph">
            <h3><%= f.button "Submit", class: "btn btn-lg btn-outline-secondary btn-block mb-2", data: {disable_with: "<i class= 'fa fa-spinner fa-spin'></i> Processing..." } %></h3>
          </form>
          
          <% end %>

    </div>
  </div>
</div>