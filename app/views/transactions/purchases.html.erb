<div id="other_background_nocenter" style="overflow-y: auto;">
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item site-red"><%= link_to current_user.username, user_path(current_user) %></li>
    <li class="breadcrumb-item">
        Purchase History</li>
  </ol>
</nav>
<%= render 'shared/alert' %>

  <div class="container trans-bg mt-6 pb-5 pt-2 px-5 rounded">

		<div class="row text-correct mt-4 pb-6 text-align-center">
			<div class="col-4 pb-3">
			  <h5>Title</h5>
			</div>
			<div class="col-2 pb-3">
			  <h5>Seller</h5>
			</div>
			<div class="col-5 pb-3">
			  <h5>Info</h5>
			</div>
			<div class="col-1 pb-3">
			  <h5>Link</h5>
			</div>
		</div>
    <div class="row text-correct mt-2 text-align-center">
      <% @transactions.each do |transaction| %>
          <div class="col-4 mb-3">
            <%= link_to transaction.listing.title, listing_path(transaction.listing) %>
          </div>
          <div class="col-2 mb-3">
            <%= link_to transaction.seller.username, user_path(transaction.seller) %>
          </div>
          <div class="col-5 mb-3">
            <i class="site-blue"><%= transaction.listing.filetype %></i> purchased on
      			<%= transaction.created_at.strftime("%Y-%m-%d") %> for <%= number_to_currency(transaction.listing.price) %>
          </div>
          <div class="col-1 mb-3">
            <%= link_to transaction.listing.file.url do %>
        		<i class="fas fa-download site-red" title="download"></i>
          <% end %>
        
          </div>
        <div class="grayline mx-auto mb-3" style="width: 94%;"></div>
      <% end %>
    </div>
	</div>
</div>