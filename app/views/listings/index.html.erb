                                       <a href="#" data-toggle="collapse" data-target="#genre-table"><i class="fas fa-bars site-red"></i></a>
                                  </div>
                              </div>
                          </th>
                        </tr>
                      </thead>
                      <tbody class="collapse-show" id="genre-table">
                        <tr>
                          <td><%= link_to "Action Adventure", genre_path("action-adventure") %></td>
