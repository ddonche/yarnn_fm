<div class="container search-result p-4">
  <div class="row">
    <h1>Search result for query: <i><%= params[:q] %></i></h1>
  </div>
  <div class="row">
    <span class="pb-4">found: <%= @found_total %> results</span>
    <% if @found_total == 0 %>
      <p>No matches for your request</p>
    <% else %>
      <% @result.each do |res| %>
        <div class="search-item w-100 pb-2">
          <span>
            in <%= res['_index'] %>: <strong><%= res['_source']['title'] %></strong>
          </span>
          <p><%= truncate(res['_source']['description'], length: 100) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
