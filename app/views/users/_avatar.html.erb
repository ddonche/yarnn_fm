<div class="main_avatar">
    <div class="ribbon_box">
      <% if @user.publisher_type == "publisher" %>
        <div class="ribbon"><span>PUBLISHER</span></div>
      <% end %>
        <% if @user.image? %>
          <%= image_tag(@user.image.url, class: "image", title: @user.username) %>
        <% else %>
          <%= image_tag('default_track.jpg', class: "image", title: @user.username) %>
        <% end %>
    </div>

    <%= render 'shared/stats' %>
    <%= render 'users/follow_form' if user_signed_in? %>
    <div class="invisible_box">
      <div class="ib_content">
        <%= @user.bio %>
      </div>
    </div>
</div>
