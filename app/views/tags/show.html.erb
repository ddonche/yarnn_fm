<title><%= request.path %> | Yarnn.FM</title>
<body style="background-color: #e4e0e0;">
 	<!-- Page Content -->
 	<section class="section-content bg padding-y-sm">
		<div class="container">
				<nav aria-label="breadcrumb">
				  <ol class="breadcrumb mt-3">
					    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
					    <li class="breadcrumb-item"><%= link_to "Genres", genres_path %></li>
					    <li class="breadcrumb-item active" aria-current="page"><%= @genre %> Portal</li>
				  </ol>
				</nav>
		    <div class="row mt-3">
		    	<div class="col-xl-3 rounded">
		    		<div class="row mb-2">
		    			<div class="col-12">
		    				<div class="card">
							  <div class="card-body">
							    <h4 class="card-title site-blue"><%= @genre %></h4>
							    <h6 class="card-subtitle mb-2 text-muted">Genre Portal</h6>
							  </div>
									<ul class="list-group list-group-flush">
									  <li class="list-group-item d-flex justify-content-between align-items-center">
									    <small><i class="fas fa-headphones site-blue mr-2" title="tracks"></i> Tracks</small>
									    <span class="badge site-blue badge-pill"><%= @tag_count %></span>
									  </li>
									  <li class="list-group-item d-flex justify-content-between align-items-center">
									    <small><i class="fas fa-shopping-cart site-blue mr-2" title="listings"></i> Products</small>
									    <span class="badge site-blue badge-pill"><%= @listings_count %></span>
									  </li>
									  <li class="list-group-item d-flex justify-content-between align-items-center">
									    <small><i class="fas fa-comment-alt site-blue mr-2" title="topics"></i> Topics</small>
									    <span class="badge site-blue badge-pill"><%= @topics_count %></span>
									  </li>
									</ul>
	
							  
							</div>
		    			</div>
		    		</div>
		    	</div><!-- end left column -->
		    	
		    	<div class="col-xl-6">
		    		<div class="card mb-2 tab-card">
				        <div class="card-header tab-card-header">
				          <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
				            <li class="nav-item">
				                <a class="nav-link" id="one-tab" data-toggle="tab" href="#one" role="tab" aria-controls="One" aria-selected="true"><i class="fas fa-headphones site-blue mr-2" title="tracks"></i></a>
				            </li>
				            <li class="nav-item">
				                <a class="nav-link" id="two-tab" data-toggle="tab" href="#two" role="tab" aria-controls="Two" aria-selected="false"><i class="fas fa-shopping-cart site-blue mr-2" title="products"></i></a>
				            </li>
				            <li class="nav-item">
				                <a class="nav-link" id="three-tab" data-toggle="tab" href="#three" role="tab" aria-controls="Three" aria-selected="false"><i class="fas fa-comment-alt site-blue mr-2" title="topics"></i></a>
				            </li>
				          </ul>
				        </div>
				
				        <div class="tab-content" id="myTabContent">
				          <div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
				            <div class="row">
								<div class="col-12">
									<h4 class="card-title site-blue">Tracks</h4>
								</div>
							</div>
							<% if @tracks.any? %>
								<%= render 'tags/tracks' %>
							<% else %>
								<p>This genre doesn't have any tracks yet.</p>
							<% end %>           
				          </div>

				          <div class="tab-pane fade p-3" id="two" role="tabpanel" aria-labelledby="two-tab">
				            <div class="row">
								<div class="col-12">
									<h4 class="card-title site-blue">Products</h4>
								</div>
							</div>
							<% if @listings.any? %>
								<%= render 'tags/listings' %>
							<% else %>
								<p>This genre doesn't have any products in the marketplace.</p>
							<% end %>                
				          </div>
				          <div class="tab-pane fade p-3" id="three" role="tabpanel" aria-labelledby="three-tab">
				            <div class="row">
								<div class="col-12">
									<h4 class="card-title site-blue">Topics</h4>
								</div>
							</div>
							<% if @topics.any? %>
								<%= render 'tags/topics' %>
							<% else %>
								<p>No one has created any topics yet.</p>
							<% end %>               
				          </div>				
				        </div>
				      </div><!-- end card -->
				      <div class="row mb-2">
		    			<div class="col-12">
		    				<div class="card">
							  <div class="card-body">
							    <h4 class="card-title site-blue">Create a Topic for <%= @genre %></h4>
							    <h6 class="card-subtitle mb-2 text-muted">Genre Portal</h6>
							  </div>
								<% if user_signed_in?  %>
								
            						<%= render "tags/topics_form" %>
								<% else %>
									<p style="color: #DC2020"><i><b>You must be logged in to create new posts.</b></i></p>
								<% end %> 
							</div>
		    			</div>
		    		</div>
		    	</div><!-- end middle column -->

		    	
		    	<div class="col-xl-3">
		    		<div class="card mb-2">
						<div class="card-body">
							<div class="row">
								<div class="col-12">
									<h4 class="card-title float-left site-blue">Following</h4> <small class="float-right"><a href="#">view all</a></small>
								</div>
							</div>
						    
						    
								<div class="row">
									<div class="col-12 d-flex justify-content-between align-items-center">
										<p>Nothing to see here yet.</p>
							   	</div>
								</div>
						</div>
					</div><!-- end card -->

		    	</div><!-- end right column -->
		    </div><!-- end row -->
		    
		</div><!-- end container -->
	</section>