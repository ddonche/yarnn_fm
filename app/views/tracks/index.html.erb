<%= render 'shared/alert' %>
  
<section>
    <div class="container-fluid mb-4">
        <div class="row">
            <div class="col-md-3 col-sm-5 ">
                <div class="bg-white px-3 mt-3 mb-5 text-muted crown-border container-shadow">
                	<div class="row py-2 mb-3 bg-light border-bottom">
                        <div class="col-12">
                          <h3 class="text-muted">Coolness</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-sm-7">
                <div class="bg-white px-3 mt-3 mb-2 text-muted crown-border container-shadow">
                    <div class="row py-2 bg-light border-bottom">
                        <div class="col-12">
                            <h3 class="text-muted">Latest Tracks</h3>
                        </div>
                    </div>
                </div>
            
				<div class="row">
				<% @tracks.each do |track| %>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div>
                            <div class="trans-bg-2 px-2 pt-2 m-2 text-correct">
    
                                <div class="text-center">
									<%= link_to track do %>
										<%= image_tag track.image.url(:thumb), title: track.title, class: "image-full border-dark" %>
									<% end %>
                                </div>
                                
                                <div class="text-left p-2 mt-2">
                                    <h4 class="site-red"><%= link_to truncate(track.title, length: 24, separator: ' '), track_path(track) %></h4>
                                    
                                    <div class="row">
                                    	<div class="col-12 site-red small">
                                    		<% if track.user.image? %>
    											<%= image_tag(track.user.image.url(:tiny), style: "width: 20px !important; display: inline-block;  border: none; vertical-align:middle;", title: track.user.username) %>
    										<% else %>
    											<%= image_tag('default_track.jpg', style: "width: 20px !important; display: inline-block; border: none; vertical-align:middle;", title: track.user.username) %>
    										<% end %>
    																		
    										<% if track.pseudonym_id? %>
    											<p class="ml-1" style="display:inline-block;"><%= link_to track.pseudonym.name, user_path(track.user) %></p>
    										<% else %>
    											<p class="ml-1" style="display:inline-block;"><%= link_to track.user.name, user_path(track.user) %></p>
    										<% end %>
                                    	</div>
                                    </div>
                                    <div class="grayline-dark"></div>
                                	<div class="row text-center">
                                	    <div class="col-6">
	                            			<div id="favorites_<%= track.id %>">
                							    <%= render 'tracks/index_favorites', :track => track %>
                							</div>
										</div>
										<div class="col-6">
	                            			<%= link_to track do %>
		                                		<i class="fas fa-comments text-muted"></i>
		                                	<% end %>
                                			<span class="ml-2"></span><%= track.comments.count %>
										</div>
                                	</div>
                                	
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
                </div>
              
            </div>
        </div>
        <%= will_paginate @tracks, previous_label: "Previous", next_label: "Next" %>
    </div>
    
</section>
<%= render 'tracks/latest' %>