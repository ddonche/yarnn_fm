<div class="main_avatar">

    <div class="image">
      <% if @user.avatar? %>
        <%= image_tag(@user.avatar.url, width: 250, title: @user.username) %>
      <% else %>
        <%= image_tag('default_track.jpg', width: 250, title: @user.username) %>
      <% end %>
    </div>
    
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if user_signed_in? %>
    <div class="invisible_box">
      <div class="ib_content">
        <%= @user.bio %>
      </div>
    </div>
</div>