<div id="background">
  <header class="cf">
    <div class="wrapper_wide">
      <%= link_to "Yarnn.fm", root_path, id: "logo" %>
      <nav>
        <ul>
          <% unless user_signed_in? %>
            <li><%= link_to "Explore", users_path %></li>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li><%= link_to "Create an Album", new_album_path %></li>
          <% else %>
            <li><a href="#">Dashboard</a></li>
            <li><%= link_to "Explore", users_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="wrapper_skinny">
    <h1>Discover your new favorite <span class="responsive_break">stories or poetry.</span></h1>
    <%= link_to "Create an Album", new_album_path, class: "button button_highlight" %>
    <%= link_to "Explore", users_path, class: "button button_white" %>
  </div>
</div>