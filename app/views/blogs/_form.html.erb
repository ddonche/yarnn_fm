  <div class="container py-2">
    <div class="row justify-content-center mb-2">
      <div class="col-md-12 col-lg-9">
        <div class="card shadow zindex-100">
          <div class="card-body px-md-5 py-3">
            <div class="text-center">
              <%= image_tag("yarnn-icon-red.png", width: 90) %>
              <h3 class="site-blue">Your Blog Post</h3>
    
  	          <hr class="colorgraph">
            </div>
            <span class="clearfix"></span>
          <%= form_for(@blog) do |f| %>
            <% if @blog.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this post from being saved:</h2>
          
                <ul>
                <% @blog.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.text_field :title, required: true, class: "form-control", placeholder: "Title" %>
            </div>
          
            <div class="form-group">
              <%= f.rich_text_area :body, rows: 15 %>
            </div>
            
              <div class="row">
                <div class="col-6 justify-content-center">
                    <%= f.radio_button :published_status, 'published' %> 
                    <%= label :published_status_published, 'Published', class: "text-secondary" %>
                </div>
                <div class="col-6 justify-content-center">
                    <%= f.radio_button :published_status, 'draft' %> 
                    <%= label :published_status_draft, 'Draft', class: "text-secondary" %>
                </div>
              </div>
          
            
            <hr class="colorgraph">
            <h2 class="site-blue">Blog Image</h2>
            
            <div class="row">
              <div class="col-12 justify-content-center">
                <%=  f.file_field :image, class: "form-control-file" %>
                <small id="imageHelp" class="form-text text-secondary">For best results, make your image 600 pixels wide by 320 high.</small>
              </div>
            </div>
            
            <hr class="colorgraph">
          	<div class="row justify-content-center">
          		<div class="col-xs-12 col-sm-12 col-md-6">
          		  <h3><%= f.button "Submit Post", class: "btn btn-lg btn-outline-secondary btn-block mb-2", data: {disable_with: "<i class= 'fa fa-spinner fa-spin'></i> Submitting..." } %></h3>
          		</div>
          	</div>
          
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>