<div class="tracks">
	<ul class="cf">
		<% @blogs.each do |blog| %>
			<li class="cf">
				<div class="track_thumbnail">
					<% if blog.avatar? %>
						<%= link_to image_tag(blog.avatar.url), blog_path(blog), width: 100, title: blog.title %>
					<% else %>
						<%= link_to image_tag(blog.user.avatar.url), blog_path(blog), width: 100, title: blog.title %>
					<% end %>
				</div>
				<div class="track_overview">
					<h2><%= link_to blog.title, blog_path(blog) %></h2>
					<p class="description"> <%= time_ago_in_words(blog.created_at) %> ago
          <% if blog.user == current_user %>
            <br /><%= link_to "edit post", edit_blog_path(blog) %>
          <% end %></p>
				  </div>
				</div>
			</li>
		<% end %>
	</ul>
  <%= will_paginate @blogs, previous_label: "Previous", next_label: "Next" %>
</div>