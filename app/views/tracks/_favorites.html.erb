<% if user_signed_in? && current_user.favorited?(@track) %>
  <%= link_to track_unfavorite_path(@track), method: :post, remote: true do %>
    <i class="fas fa-heart text-danger mr-2"></i><%= @track.favorites_count %> 
  <% end %>
<% else %>
  <%= link_to track_favorite_path(@track), method: :post, remote: true do %>
    <i class="far fa-heart text-danger mr-2"></i><%= @track.favorites_count %>
  <% end %>
<% end %>