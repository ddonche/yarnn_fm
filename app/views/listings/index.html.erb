<body style="background-color: #e4e0e0;">
  <!-- Page Content -->
  <div class="container">

    <div class="row">
      <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <div class="carousel-inner shadow-sm" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="https://yarnn.s3-us-west-2.amazonaws.com/banners/market-banner1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://yarnn.s3-us-west-2.amazonaws.com/banners/market-banner2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://yarnn.s3-us-west-2.amazonaws.com/banners/market-banner3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        
        <div id="carouselExampleIndicators2" class="carousel slide my-4" data-ride="carousel">
          <div class="carousel-inner shadow-sm rounded" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="https://yarnn.s3-us-west-2.amazonaws.com/banners/market-under-banner.jpg" alt="Under Banner">
            </div>
          </div>
        </div>
        

        <div class="row">
				<% @listings.each do |listing| %>
          <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
              <%= link_to listing do %>
								<%= image_tag listing.image.url(:thumb), title: listing.title, class: "card-img-top" %>
							<% end %>
              <div class="card-body">
                <h5 class="card-title">
                  
                  <%= link_to listing.title, listing_path(listing), class: "site-red" %>
                </h5>
                <% if listing.pseudonym_id? %>
    							<small><%= link_to listing.pseudonym.name, user_path(listing.user) %></small>
    						<% else %>
    							<small><%= link_to listing.user.name, user_path(listing.user) %></small>
    						<% end %>
                <h4><%= number_to_currency(listing.price) %></h4>
                <div class="small"><%= listing.filetype %></div>
              </div>
              <div class="card-footer">
                <div id="stars">
									<div class="star-rating" data-score=<%= listing.avg_rating %> style="max-width: 10%;"></div>
								</div>
              </div>
            </div>
          </div>  
        <% end %>
        </div>
       
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->
      
      <div class="col-lg-3">
        <div class="card mt-4">
          <div class="card-header bg-secondary">
            <h2 class="text-white">Genres</h2>
          </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= link_to "Action", tag_path("action-adventure") %></li>
          <li class="list-group-item"><%= link_to "Apocalypse", tag_path("apocalypse") %></li>
          <li class="list-group-item"><%= link_to "Business", tag_path("business") %></li>
          <li class="list-group-item"><%= link_to "Children's", tag_path("childrens") %></li>
          <li class="list-group-item"><%= link_to "Classics", tag_path("classics") %></li>
          <li class="list-group-item"><%= link_to "Comedy", tag_path("comedy") %></li>
          <li class="list-group-item"><%= link_to "Crime", tag_path("crime") %></li>
          <li class="list-group-item"><%= link_to "Erotica", tag_path("erotica") %></li>
          <li class="list-group-item"><%= link_to "Fantasy", tag_path("fantasy") %></li>
          <li class="list-group-item"><%= link_to "Financial", tag_path("financial") %></li>
          <li class="list-group-item"><%= link_to "History", tag_path("history") %></li>
          <li class="list-group-item"><%= link_to "Historical Fiction", tag_path("historical-fiction") %></li>
          <li class="list-group-item"><%= link_to "Horror", tag_path("horror") %></li>
          <li class="list-group-item"><%= link_to "Inspirational", tag_path("inspirational") %></li>
          <li class="list-group-item"><%= link_to "LGBTQ", tag_path("lgbtq") %></li>
          <li class="list-group-item"><%= link_to "Memoir", tag_path("memoir") %></li>
          <li class="list-group-item"><%= link_to "Military", tag_path("military") %></li>
          <li class="list-group-item"><%= link_to "Mystery", tag_path("mystery") %></li>
          <li class="list-group-item"><%= link_to "Nonfiction", tag_path("nonfiction") %></li>
          <li class="list-group-item"><%= link_to "Paranormal Romance", tag_path("paranormal-romance") %></li>
          <li class="list-group-item"><%= link_to "Philosophy", tag_path("philosophy") %></li>
          <li class="list-group-item"><%= link_to "Poetry", tag_path("poetry") %></li>
          <li class="list-group-item"><%= link_to "Religion", tag_path("religion") %></li>
          <li class="list-group-item"><%= link_to "Romance", tag_path("romance") %></li>
          <li class="list-group-item"><%= link_to "Science Fiction", tag_path("science-fiction") %></li>
          <li class="list-group-item"><%= link_to "Self Help", tag_path("self-help") %></li>
          <li class="list-group-item"><%= link_to "Spy Thriller", tag_path("spy-thriller") %></li>
          <li class="list-group-item"><%= link_to "Thriller", tag_path("thriller") %></li>
          <li class="list-group-item"><%= link_to "True Crime", tag_path("true-crime") %></li>
          <li class="list-group-item"><%= link_to "Western", tag_path("western") %></li>
          <li class="list-group-item"><%= link_to "Women's", tag_path("womens") %></li>
          <li class="list-group-item"><%= link_to "Young Adult", tag_path("young-adult") %></li>
        </ul>
      </div>
      </div>
      <!-- /.col-lg-3 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

</body>
<script>
  $('.star-rating').raty({
    path: 'https://s3-us-west-2.amazonaws.com/yarnn/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>