<div id="background-other">
  
  <div class="container" style="width: 600px">
    <div class="row justify-content-center trans-bg p-5 mt-5 rounded">
      <div class="col-11">
        <fieldset> 
        <h2 class="text-secondary">Sign In</h2>
				<hr class="colorgraph">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "text-secondary" %><br />
            <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email Address" %>
          </div>
    
          <div class="form-group">
            <%= f.label :password, class: "text-secondary" %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
          </div>
    
          <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-12 col-md-12">
              <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= link_to "Remember Me", new_user_password_path, :class => "btn site-blue pull-left" %>
      					<%= f.check_box :remember_me, class: "mt-3 pull-left" %>
      					<%= link_to "Forgot Password?", new_user_password_path, :class => "btn site-blue pull-right" %>
      				</div>
              <% end %>
            </div>
          </div>
          
          <hr class="colorgraph">
  				<div class="row">
  					<div class="col-xs-6 col-sm-6 col-md-6">
  					  <%= f.submit "Log in", class: "btn btn-lg btn-outline-secondary btn-block" %>
  					</div>
  					<div class="col-xs-6 col-sm-6 col-md-6">
  					  <%= link_to "Register", new_user_registration_path, :class => "btn btn-lg btn-outline-secondary btn-block" %>
  					</div>
  				</div>

        <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
    