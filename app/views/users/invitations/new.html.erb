<body style="background-color: #e4e0e0;">
 	<!-- Page Content -->

<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow zindex-100">
        <div class="card-body px-md-5 py-3 justify-content-center">
          <div class="text-center mb-1">
            <%= image_tag("yarnn-icon-red.png", width: 100) %>
            <h2 class="site-blue"><%= t "devise.invitations.new.header" %></h2>
          </div>
          <hr class="colorgraph">
          <span class="clearfix"></span>
            
          <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              
            <% resource.class.invite_key_fields.each do |field| -%>
          
            <form>
              <div class="form-group">
                <%= f.label field, class: "small site-blue" %><br />
                <%= f.text_field field, class: "form-control" %>
              </div>
              <button type="submit" class="btn btn-site-blue btn-block"><%= t("devise.invitations.new.submit_button") %></button>
            </form>
          
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
